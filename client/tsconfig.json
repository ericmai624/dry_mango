{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"],
  "types": ["typePatches"]
}
